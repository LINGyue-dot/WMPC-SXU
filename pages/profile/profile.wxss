/* pages/about/about.wxss */
.about-container {
  height: 100%;
  width: 100%;
  background-color: #e5e4e4;
}

.about-bg {
  width: 100vw;
  height: 30vh;
  overflow: hidden;
}

.about-bg image {
  width: 100%;
  height: 100%;
  object-fit: none;
}

.about-user {
  position: relative;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.about-user-avatar {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px #fff solid;
  overflow: hidden;
  transform: translateY(-50%);
}

.about-user-name {
  display: block;
  margin-left: 300rpx;
  font-size: 22px;
}

.about-user-description {
  padding: 20rpx;
  display: block;
  margin-top: 100rpx;
  box-sizing: border-box;
  width: 100%;
  word-break: keep-all;
  word-wrap: break-word;
}


.profile-row {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.profile-link{
  padding: 0 30rpx;
}



.profile-link>text{
  float: right;
}

.profile-tip{
  position: absolute;
  top: -10rpx;
  padding: 0;
  font-size: 20rpx;
  color:#ea6361;
}

.logout{
  margin: 30rpx 0;
  text-align: center;
}

.white {
  height: 80px;
}