/**index.wxss**/
.index-container {
  width: 100%;
  height: 100%;
}


.index-map {
  position: relative;
  width: 100%;
  height: 70%;
}

.map {
  width: 100%;
  height: 100%;
}

.index-icon {
  position: absolute;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  background-color: #fff;
  z-index: 999999;
}

.index-location {
  bottom: 20%;
}

.index-search {
  bottom: 10%;
}

.icon-location,
.icon-search {
  position: absolute;
  left: 50%;
  margin-left: -8px;
}

.index-list {
  height: 30%;
  overflow-y: scroll;

}